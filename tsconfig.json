{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "lib": ["es2015", "scripthost", "es2015.promise", "es2015.generator", "es2015.iterable", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "outDir": "build",
    "strict": false,
    "target": "es5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/templates/**", "src/utils/cli-test-setup.ts", "**/*.test.ts"]
}
